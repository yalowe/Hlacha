{
  "name": "hlacha-root",
  "private": true,
  "scripts": {
    "build:functions": "npm --prefix functions run build",
    "emu": "npm --prefix functions run build && firebase emulators:start --project demo-hlacha",
    "emu:ci": "npm --prefix functions run build && firebase emulators:exec --project demo-hlacha \"npm test\"",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "deploy:functions": "firebase deploy --only functions",
    "test": "vitest run",
    "lint": "npm --prefix kitzur run lint",
    "typecheck": "npx tsc -p kitzur/tsconfig.json --noEmit",
    "ts-prune": "ts-prune -p kitzur/tsconfig.json --ignore 'kitzur/app/|_layout\\.tsx|_layout\\.ts'"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/react": "^19.2.13",
    "@types/react-native": "^0.72.8",
    "firebase": "^12.9.0",
    "firebase-admin": "^12.6.0",
    "firebase-tools": "^13.31.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "expo": "^54.0.33",
    "expo-clipboard": "^8.0.8",
    "expo-haptics": "^15.0.8",
    "expo-linear-gradient": "^15.0.8",
    "expo-router": "^6.0.23",
    "react": "^19.2.4",
    "react-native": "^0.83.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-svg": "^15.15.3"
  }
}
